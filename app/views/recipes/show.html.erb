<h2>Recipes#show</h2>

<h1><%= @recipe.name %></h1>
<p><%= @recipe.creator.username %></p>
<h3>Ingredients:</h3>
  <ul style="list-style: none">
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.amount %>  <%= ingredient.name %></li>
  <% end %>
</ul>
<h3>Instructions:</h3>
<p><%= @recipe.instructions %></p>
<h5>Cooking Time:</h5>
<p><%= @recipe.cooking_time %></p>
<h5>Cooking Style: </h5>
<p><%= @recipe.cooking_style %></p>
<h5>Tags:</h5>
<ul class="no-decoration tag-container">
      <% @recipe.tags.each do |tag| %>
        <%= render partial: "tags/show", locals: {tag: tag} %>
      <% end %>
    </ul>
